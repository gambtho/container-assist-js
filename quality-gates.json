{
  "$schema": "./quality-gates.schema.json",
  "schemaVersion": 1,
  "metrics": {
    "thresholds": {
      "lint": {
        "maxErrors": 0,
        "maxWarnings": 0
      },
      "deadcode": {
        "max": 50
      },
      "typescript": {
        "maxErrors": 0
      },
      "build": {
        "maxTimeMs": 60000
      }
    },
    "baselines": {
      "lint": {
        "errors": 0,
        "warnings": 0
      },
      "deadcode": {
        "count": 50
      },
      "typescript": {
        "errors": 0
      },
      "build": {
        "timeMs": 2000,
        "mode": "clean",
        "environment": {
          "nodeVersion": "v24.1.0",
          "os": "Linux",
          "cpu": "x86_64"
        }
      }
    }
  }
}
