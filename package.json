{
  "name": "@thgamble/containerization-assist-mcp",
  "version": "1.1.8",
  "description": "TypeScript MCP server for AI-powered containerization workflows with Docker and Kubernetes support",
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/src/index.js",
  "types": "./dist/src/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    },
    "./config": {
      "types": "./dist/service/config/config.d.ts",
      "import": "./dist/service/config/config.js"
    }
  },
  "bin": {
    "containerization-assist-mcp": "./dist/apps/cli.js",
    "ca-mcp": "./dist/apps/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "rm -rf dist coverage .tsbuildinfo*",
    "build": "BUILD_TEST_UTILS=true tsdown && node scripts/post-build.js",
    "build:fast": "tsdown && SKIP_DECLARATIONS=true node scripts/post-build.js",
    "build:prod": "NODE_ENV=production tsdown --minify && node scripts/post-build.js",
    "build:dev": "SKIP_DECLARATIONS=true tsdown",
    "build:watch": "tsdown --watch",
    "dev": "tsx watch apps/cli.ts",
    "start": "node dist/apps/cli.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage",
    "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/unit/**/*.test.ts' --bail --testTimeout=30000",
    "test:unit:quick": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/unit/**/*.test.ts' --bail --testTimeout=10000",
    "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --testMatch='**/integration/**/*.test.ts' --testTimeout=120000",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "typecheck": "tsc --noEmit",
    "validate": "npm run lint && npm run typecheck && npm run test:unit",
    "fix:all": "npm run lint:fix && npm run format",
    "quality:check": "./scripts/lint-metrics.sh",
    "quality:gates": "SKIP_TYPECHECK=true ./scripts/quality-gates.sh",
    "baseline:update": "./scripts/lint-metrics.sh --baseline",
    "baseline:report": "./scripts/lint-metrics.sh | head -20",
    "bundle:size": "npm run build:prod && find dist -name '*.js' -print0 | xargs -0 wc -c | awk '{sum+=$1} END {print \"Total bundle size: \" sum/1024 \" KB\"}' && ls -la dist/apps/cli.js | awk '{print \"CLI binary size: \" $5/1024 \" KB\"}'",
    "bundle:check": "npm pack --dry-run",
    "prepublishOnly": "npm run validate && npm run build:prod",
    "release": "npm run validate && npm run build:prod && npm publish",
    "prepare": "husky install",
    "mcp:inspect": "npx @modelcontextprotocol/inspector ./scripts/mcp-start.sh start",
    "mcp:inspect:mock": "npx @modelcontextprotocol/inspector ./scripts/mcp-start-mock.sh start"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.3.0",
    "@modelcontextprotocol/sdk": "^1.17.5",
    "commander": "^11.1.0",
    "dockerode": "^4.0.0",
    "execa": "^9.6.0",
    "js-yaml": "^4.1.0",
    "nanoid": "^5.0.4",
    "p-retry": "^7.0.0",
    "p-timeout": "^6.1.4",
    "pino": "^9.9.0",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.22.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/dockerode": "^3.3.23",
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.19.12",
    "@types/p-retry": "^3.0.0",
    "@types/tar-fs": "^2.0.4",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.55.0",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.6",
    "pino-pretty": "^13.1.1",
    "prettier": "^3.1.0",
    "ts-jest": "^29.4.1",
    "tsdown": "^0.2.17",
    "tsx": "^4.7.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix --max-warnings 750",
      "prettier --write"
    ]
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "containerization",
    "docker",
    "kubernetes",
    "ai-assisted",
    "devops",
    "java",
    "spring-boot",
    "maven",
    "gradle"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gambtho/container-assist-js.git"
  },
  "bugs": {
    "url": "https://github.com/gambtho/container-assist-js/issues"
  },
  "homepage": "https://github.com/gambtho/container-assist-js#readme"
}
